#!/bin/bash

# Sourcing functions
source create-table
source list-tables
source drop-table
source insert
source select-table
source delete-table

# Function to display the database table management menu
DBmenu() {
    clear
    echo "=========================="
    echo "  Database Table Management"
    echo "=========================="
    echo "1 - Create Table"
    echo "2 - List Tables"
    echo "3 - Drop Table"
    echo "4 - Insert into Table"
    echo "5 - Select from Table"
    echo "6 - Delete from Table"
    echo "7 - Update Table"
    echo "8 - Back to Main Menu"
    echo "=========================="
    
    read -p "Enter your choice [1-8]: " ch
    case "$ch" in 
        1) create-table ;;
        2) list-tables ;;
        3) drop-table ;;
        4) insert ;;
        5) select-table ;;
        6) delete-table ;;
        7) update-table ;;
        8) menu ;;
        *) echo "Invalid choice. Please try again."; DBmenu ;;
    esac
}

# Invoke the DBmenu function
DBmenu

	 "8")menu;;
	 *) echo "try again";;
esac
}
